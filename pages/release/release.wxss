page {
  background: #ddd;
}
.list {
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-top: 30rpx;
  background: #fff;
  border-radius: 40rpx;
}
.list.list_last {
  border-radius: 20rpx;
}
.list input {
  width: 96%;
  margin: 0 auto;
  height: 70rpx;
  color: #585858;
  font-size: 28rpx;
  line-height: 70rpx;
}
.list_radio {
  font-size: 28rpx;
  background: unset;
  border-radius: unset;
}
.radio-group{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.list_radio .radio {
  display: block;
  width: 25%;
  float: left;
  color: #585858;
  margin-bottom: 20rpx;
  transform: scale(0.8);
}
.list_radio input{
  background: #fff;
  width: 100%;
  padding:0 2%;
  margin: 0 auto;
  height: 70rpx;
  color: #585858;
  font-size: 28rpx;
  line-height: 70rpx;
  border-radius: 40rpx;
}
.list .list_title{
  display: block;
  color: #585858;
  font-size: 28rpx;
  padding-left:5px;
  margin-bottom:20rpx;
}
.list .sex {
  display: block;
  width: 96%;
  margin: 0 auto;
  height: 70rpx;
  color: #585858;
  font-size: 28rpx;
  line-height: 70rpx;
}
.list textarea {
  width: 96%;
  height: 280rpx;
  margin: 0 auto;
  padding: 5px 0;
  background: #fff;
  overflow: hidden;
  font-size: 28rpx;
  color: #585858;
  text-align: justify;
  line-height: 40rpx;
}
.btn {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 40rpx;
  background: #b50029;
}